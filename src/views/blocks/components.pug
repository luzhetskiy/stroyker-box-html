mixin product-card-v2(params = {})
  .product-card-v2(class=`${params.type=='2'?'product-card-v2_type-2':'product-card-v2_type-1'}` data-custom-interaction) 
    a(href="#").product-card-v2__link

    .product-card-v2__image 
      if params.style=='3'
        .image.image_contain.image_no-image
          img(src=`${href}/img/icons/product-placeholder.svg`, alt="image")
      else
        .image.image_contain
          img(src=`${href}/img/b49c856cb0b15abac9a63bda5f241eff.jpeg`, alt="image")
          img(src=`${href}/img/test.jpg`, alt="image")
        
      .product-card-v2__rating
        img(src=`${href}/img/icons/rating.svg`, alt="image").product-card-v2__rating-stars

      if params.style!=='3'
        .product-card-v2__labels
          if params.style=='2'
            .card-label.card-label_style-stock.product-card-v2__label Уценка
